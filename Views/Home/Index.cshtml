@{
    ViewData["Title"] = "Home Page";
}

<!-- Full Width Image Header -->
    <header class="header-image x">
        <div class="headline">
            <div class="container">
                <h1>Todoapp</h1>
                <h2>Get Stuff Done!</h2>
            </div>
        </div>
    </header>

    <!-- Page Content -->
    <div class="container">

        <hr class="featurette-divider">

        <!-- First Featurette -->
        <div class="featurette" id="about">
            <img class="featurette-image img-circle img-responsive pull-right" src="https://s3-us-west-2.amazonaws.com/slack-files2/avatars/2015-12-26/17403075280_024490441c688e6ab5f8_512.png">
            <h2 class="featurette-heading">Write everything down
                <span class="text-muted">and get it done</span>
            </h2>
            <p class="lead">Our app will keep track of everything that you need to do.</p>
        </div>

        <hr class="featurette-divider">

        <!-- Second Featurette -->
        <div class="featurette" id="services">
            <img class="featurette-image img-circle img-responsive pull-left" src="http://www.insidermarketingstrategies.com/wp-content/uploads/2013/12/business-guy.png">
            <h2 class="featurette-heading">Become more productive
            </h2>
            <p class="lead">With our app you will get things done faster and boost your producivity!</p>
        </div>

        <hr class="featurette-divider">

        <!-- Third Featurette -->
        <div class="featurette" id="contact">
            <img class="featurette-image img-circle img-responsive pull-right" src="http://plingstock.com/wp-content/uploads/symbiostock_rf_content/788-financial-success-chart-with-arrow-pointing-up.jpg">
            <h2 class="featurette-heading">See what you can achieve
            </h2>
            <p class="lead">You can look back at your past achievments to keep track of your success!</p>
        </div>

    </div>
    <!-- /.container -->
